<!DOCTYPE html>
<html>
  <body>
  <h2>My Todos</h2>

  <p>
  Show: 
  <a href="/todos">All</a> | 
  <a href="/todos?status=pending">Pending</a> | 
  <a href="/todos?status=completed">Completed</a>
</p>

<form action="/todos" method="POST">
  <input type="text" name="title" placeholder="New task" required />
  <button type="submit">Add</button>
</form>


<ul>
  <% todos.forEach(todo => { %>
    <li>
      <%= todo.title %> - <%= todo.status %>
      <% if (todo.status === "pending") { %>
        <form action="/todos/<%= todo._id %>/complete" method="POST" style="display:inline;">
          <button type="submit">Complete</button>
        </form>
      <% } %>
      <% if (todo.status !== "deleted") { %>
        <form action="/todos/<%= todo._id %>/delete" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      <% } %>
    </li>
  <% }) %>
</ul>



  </body>
</html>
